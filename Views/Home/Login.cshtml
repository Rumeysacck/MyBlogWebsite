@{
    ViewData["Title"] = "Log In";
}

<!-- Form: login-form sınıfını ekledik, böylece sadece bu formdaki stiller etkilenecek -->
<form class="login-form" method="post" action="/Home/Login">
    <h3 id="logo">Log In</h3>

    <label for="adminEmail">Email</label>
    <input type="text" id="adminEmail" name="adminEmail" placeholder="Type in your e-mail address..." autocomplete="off" required />

    <label for="adminPassword">Password</label>
    <div style="position: relative;">
        <input type="password" id="adminPassword" name="adminPassword" placeholder="Enter your password..." autocomplete="off" required />
        <a class="show-password" href="javascript:void(0);" onclick="togglePassword()">Show Password</a> <!-- Şifre gösterme butonunu sağa aldık -->
    </div>

    <a class="forgot" href="#">Forgot Password?</a>


    <input type="submit" name="submit" value="Log In" />
</form>

<!-- CSS'i dahil ediyoruz -->
<link rel="stylesheet" href="~/css/login.css">

<!-- Şifre göster/gizle fonksiyonunu ekliyoruz -->
<script>
function togglePassword() {
    var passwordInput = document.getElementById("adminPassword");
    var toggleLink = document.querySelector(".show-password");
    if (passwordInput.type === "password") {
        passwordInput.type = "text";
        toggleLink.textContent = "Hide Password";
    } else {
        passwordInput.type = "password";
        toggleLink.textContent = "Show Password";
    }
}
</script>
