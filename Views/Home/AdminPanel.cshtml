@{
    ViewData["Title"] = "Blog Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h3>Yeni Blog Ekle</h3>
    <form id="blogForm">
        <div class="mb-3">
            <label for="blogTitle" class="form-label">Blog Başlığı</label>
            <input type="text" class="form-control" id="blogTitle" placeholder="Başlık girin" required>
        </div>
        <div class="mb-3">
            <label for="blogAuthor" class="form-label">Yazar</label>
            <input type="text" class="form-control" id="blogAuthor" placeholder="Yazar girin" required>
        </div>
        <div class="mb-3">
            <label for="blogDate" class="form-label">Yayınlanma Tarihi</label>
            <input type="date" class="form-control" id="blogDate" required>
        </div>
        <div class="mb-3">
            <label for="blogContent" class="form-label">Blog İçeriği</label>
            <textarea class="form-control" id="blogContent" rows="5" placeholder="İçerik girin" required></textarea>
        </div>
        <div class="mb-3">
            <label for="blogImage" class="form-label">Blog Görsel URL</label>
            <input type="text" class="form-control" id="blogImage" placeholder="Görsel URL girin">
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>

<script src="~/js/blog.js"></script>
