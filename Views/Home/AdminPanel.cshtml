<!DOCTYPE html>
<html lang="en" ng-app="blogApp">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AngularJS Firebase Blog</title>
  <!-- Firebase SDK -->
  <script src="https://www.gstatic.com/firebasejs/8.6.8/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.6.8/firebase-database.js"></script>
  <!-- AngularJS -->
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
  <!-- Custom JS -->
  <script src="blog.js"></script>
  <style>
    body { font-family: Arial, sans-serif; }
    .blog-post { margin-bottom: 20px; }
  </style>
</head>
<body ng-controller="BlogController">

  <h1>AngularJS Blog with Firebase</h1>

  <!-- Blog Form -->
  <form ng-submit="addBlog()">
    <input type="text" ng-model="newBlog.title" placeholder="Başlık" required /><br><br>
    <textarea ng-model="newBlog.content" placeholder="İçerik" required></textarea><br><br>
    <input type="text" ng-model="newBlog.author" placeholder="Yazar" required /><br><br>
    <button type="submit">Gönder</button>
  </form>

  <hr>

  <!-- Blog List -->
  <div ng-repeat="blog in blogs" class="blog-post">
    <h2>{{blog.title}}</h2>
    <p>{{blog.content}}</p>
    <p><strong>{{blog.author}}</strong> - {{blog.date}}</p>
    <button ng-click="deleteBlog(blog.key)">Sil</button>
    <hr>
  </div>

</body>
</html>
